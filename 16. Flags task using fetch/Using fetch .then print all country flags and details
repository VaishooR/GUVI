// Country flag cards:
fetch('https://restcountries.com/v3.1/all')
.then((data)=>(data.json()))
.then((countries)=>{
    function foo(){
        for(var i of countries){
            const card=document.createElement('div');
            card.setAttribute('class', 'card');

            card.innerHTML+=`
            <div class='img'><img src='${i.flags.svg}'/></div>
            <div class='content'>
            <p>Capital:${i.capital}</p>
            <p>Population:${i.population}</p>
            <p>Region:${i.region}</p>
            </div>
            `
            document.body.append(card)
        }
    }
    foo()
})









*{
    margin:0;
    padding:0;
}

body{
    width:100vw;
    height:100vh;
    display:flex;
    flex-wrap: wrap;
    margin-top:50px;
    justify-content:space-around;
}


.card{
    width:200px;
    height:300px;
    border:1px solid black;
    border-radius:20px;
    overflow:hidden;
    margin:13px;
    background-color: antiquewhite;

}

img{
    width:200px;
    height:150px;
}

.content{
    text-align:center;
}
